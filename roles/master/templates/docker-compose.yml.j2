version: '3'
services:
    nginx:
        image: nginx:1.19.7
        deploy:
          restart_policy:
            condition: on-failure
            delay: 5s
            max_attempts: 3
            window: 120s
        security_opt:
          - no-new-privileges:true
        volumes:
            - ./nginx.conf:/etc/nginx/conf.d/default.conf:ro
        ports:
            - "8080:80"
